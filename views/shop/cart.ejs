<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if (cartToDisplay.length > 0) { %>
            <ul>
                <% for (let data of cartToDisplay) { %>
                    <li>
                        <p><%= data.productData.title %> (<%= data.qty %>)</p>
                        <form action="/delete-cart-item" method="POST">
                            <input type="hidden" name="productId" value="<%= data.productData.id %>" />
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </li>
                <% } %>
            </ul>
            <hr />
            <div class="left">
                <div class="centered">Total Price: $ <%= totalPrice %></p>
            </div>
        <% } else { %>
            <h1>No products in the cart</h1>
        <% } %>
        <%- include('../includes/end.ejs') %>