<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if (editingMode) { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editingMode) { %><%= product.title %><% } %>">
            </div>

            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editingMode) { %><%= product.imageUrl %><% } %>">
            </div>

            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (editingMode) { %><%= product.price %><% } %>">
            </div>

            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"  value="<% if (editingMode) { %><%= product.description %><% } %>"><% if(editingMode) { %><%= product.description %><% } %></textarea>
            </div>

            <% if(editingMode) { %>
            <input type="hidden" name="productId" value="<%= product.id %>" />
            <% } %>

            <button class="btn" type="submit"><% if (editingMode) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
